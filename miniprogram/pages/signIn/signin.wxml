<!--miniprogram/pages/signIn/signin.wxml-->
<view class="container"> 
  <view class="login-icon">  
    <image class="login-img" src="/images/signin/1.jpg"></image>  
  </view>  
  <view class="login-from">  
    <form bindsubmit="formSubmit" class='form'>
      <view class="loginPane">
        <van-field
         class="usernameField"
          left-icon="/images/signin/account.png"
          value="{{ username }}"
          clearable
          placeholder="请输入用户名"
          bind:click-icon="onClickIcon"
        />
        <van-field
         class="passwordFiled"
         left-icon="/images/signin/password.png"
         value="{{ password }}"
         type="password"
         placeholder="请输入密码"
         border="{{ false }}"
        />
        <view class="checkboxPane">
          <checkbox>记住密码</checkbox>
          <checkbox>自动登录</checkbox>
        </view>
      </view>
    <view class="signInBtnView">  
      <van-button type="primary" class="signinBtn" size="large" round="ture" form-type='submit' disabled='{{disabled}}'>登录</van-button>  
    </view>  
    <view class="signUpBtnView">  
      <van-button type="primary" class="signUpBtn" size="large"  round="ture" form-type='submit' disabled='{{disabled}}'>注册</van-button>  
    </view> 
    </form>
  
  </view>  
</view>  
