  overflow: hidden;
  vertical-align: middle;
  align-content: middle;
  padding-left: 40px;
  font-weight: 500;
  z-index: 1;
}
.listView{
  position: fixed;
}

.background{
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
