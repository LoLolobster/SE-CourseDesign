}

.dropdown{
  opacity: 0.7
}

.cardView{
  background-color: #FFF;
  border-radius: 5px;
  margin: 5px;
  display:flex;
  height:140px;
  margin-top:10px;
  opacity: 0.8;
  box-shadow: 0rpx 10rpx 50rpx 10rpx rgba(85, 85, 85, 0.10);
  z-index: -1;
}

