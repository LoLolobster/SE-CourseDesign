.container{
  width: 95%;
  height: 100%;
  margin: 0 auto;
  overflow-y: scroll;
}
.navhead{
  width: 100%;
  height: 10rpx;
  line-height: 150rpx;
  position: relative;
}
.navbar{
  width: 100%;
  margin-bottom: 10rpx;
}
.head{
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  display: flex;
  position: relative;
  justify-content: space-between;
}
.head::after{
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  transform: scaleY(.5);
  background-color: #9D9D9D;
}
