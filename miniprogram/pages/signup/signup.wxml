 <view wx:if="{{!success}}">
 <form bind:submit="_handleSubmit">
 <view class='row'>
        <view class='info'>
               <input  class= 'info-input1' name="inputName" placeholder="请设置你的用户名" />
         </view>
 </view>

  <view class='row'>
        <view class='info'>
               <input type='password' class= 'info-input' name="inputPwd" placeholder="请设置你的密码" />
         </view>
 </view>

  <view class='row'>
        <view class='info'>
               <input  type='password' class= 'info-input' name="repeatPwd" placeholder="请重新输入你的密码" />
         </view> 
 </view>
 <button class='submit' form-type="submit">提交</button>
  </form>
 </view>


 <view class = 'success' wx:if="{{success}}">
 <view class='cheer'><icon type="success" size="24"/> 恭喜您注册成功!</view>
 <button type = "default" class = 'return' bindtap='return_home'>返回首页</button>
 </view>

